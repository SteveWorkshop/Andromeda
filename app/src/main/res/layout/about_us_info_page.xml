<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--todo: 滚动支持-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Andromeda - 专注本地记录与绘图的实用软件包"/>
    <LinearLayout
        android:padding="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本："/>
        <TextView
            android:id="@+id/txb_version_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:padding="20px"
        android:text="  这是一款面向本地与隐私的记录与绘图软件，专为无法长时间保持一个姿势的精力无穷的用户设计，用于记录捕捉瞬间的灵感，避免它们稍纵即逝。软件完全面向本地，没有联网功能，不上传您的任何个人信息。但也请注意使用环境的安全性，请参考Google与您的设备制造商的用户协议"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="20px"
        android:text="  本项目的灵感来源于微软被取消的仙女座工程，敬请期待，好东西就要来了！ 请坐和放宽，滚回功率，进入新的植物性燃料，迎接幸福倒计时。 我们不是面向我们所有人，而是面向我们每一个人~~~~啦啦啦啦~~~"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="20px"
        android:text="  让我们把微软的倒车开回去，做一件大事情，粉碎你的工作日！轰！嚓-嚓-嚓！推推！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="您可以在这里检视本软件的源代码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:autoLink="web"
            android:text="https://github.com/SteveWorkshop/Andromeda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>